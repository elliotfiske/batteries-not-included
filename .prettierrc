{
  "printWidth": 120,
  "tabWidth": 4,
  "trailingComma": "all",
  "semi": false,
  "arrowParens": "always",
  "overrides": [
    {
      "files": "*.yml",
      "options": {
        "tabWidth": 2
      }
    },
    {
      "files": "*.mdx",
      "options": {
        "tabWidth": 2,
        "printWidth": 80
      }
    },
    {
      "files": "*.json",
      "options": {
        "tabWidth": 2,
        "printWidth": 80
      }
    }
  ]
}
